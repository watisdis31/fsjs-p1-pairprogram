<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title><%= user.username %> â€¢ KitabMuka</title>
  <link rel="stylesheet" href="/styles/profile.css">
</head>
<body>
  <!-- NAVBAR -->
  <nav class="navbar">
    <h2>KitabMuka</h2>
    <div class="nav-actions">
      <a href="/kitabmuka/posts/add" class="btn primary">Post</a>
      <a href="/kitabmuka/posts" class="btn outline">Home</a>
      <a href="/kitabmuka/logout" class="btn outline">Logout</a>
    </div>
  </nav>

  <main class="container">
    <section class="profile-header">
      <h1>@<%= user.username %></h1>
      <span>Your Posts</span>
    </section>

    <section class="feed">
      <% if (posts.length === 0) { %>
        <p class="empty">No posts yet ğŸ˜´</p>
      <% } %>

      <% posts.forEach(post => { %>
        <article class="post">
          <div class="post-header">
            <strong>@<%= user.username %></strong>
            <span class="date"><%= formatDate(post.createdAt) %></span>
          </div>

          <p class="post-content"><%= post.description %></p>
          <% if(post.imageUrl){ %>
            <img src="<%= post.imageUrl %>" alt="post image">
          <% } %>

          <div class="post-actions">
            <a href="/kitabmuka/posts/<%= post.id %>/like">â¤ï¸ Like (<%= post.totalLike %>)</a>
            <a href="/kitabmuka/posts/<%= post.id %>/edit">âœï¸ Edit</a>
            <a href="/kitabmuka/posts/<%= post.id %>/delete" class="danger">ğŸ—‘ Delete</a>
          </div>
        </article>
      <% }) %>
    </section>
  </main>
</body>
</html>
